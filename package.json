{
  "name": "cloudflare-workers-d1-hono-drizzzle-better-auth-template",
  "scripts": {
    "prepare": "husky",
    "typegen:cf": "wrangler types",
    "type-check": "tsc --noEmit && echo \"Types check passed\"",
    "better-auth-gen-schema": "bunx @better-auth/cli@latest generate --config ./better-auth.config.ts --output ./server/d1/schema/auth.sql.ts",
    "db:generate": "drizzle-kit generate",
    "db:apply": "wrangler d1 migrations apply",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "format": "prettier . --check",
    "format:fix": "prettier '**/*.{js,jsx,ts,tsx,json,md}' --write",
    "lint": "eslint .",
    "lint-and-format:fix": "eslint server --fix && prettier . --write"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint",
    "*.{js,css,md,ts,tsx,jsx}": "prettier --write"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "better-auth": "^1.4.7",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.0",
    "kysely-d1": "^0.4.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/types": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.49.0",
    "wrangler": "^4.54.0"
  }
}
